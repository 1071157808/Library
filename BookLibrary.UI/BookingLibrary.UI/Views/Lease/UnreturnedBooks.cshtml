@model List<UnreturnedBookViewModel>
@{
    ViewBag.Title = "UnreturnedBooks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Unreturned Books</h2>
<div style="margin-bottom:10px">
    <button class="btn btn-success" type="button" data-toggle="modal" data-target="#rentBookModal">+ Rent</button>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Book Id</th>
            <th>Book Name</th>
            <th>ISBN</th>
            <th>Return Date</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            var index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName @item.MiddleName @item.LastName</td>
                    <td>@item.BookId</td>
                    <td>@item.BookName</td>
                    <td>@item.ISBN</td>
                    <td>@item.RentDate.ToString("yyyy-MM-dd")</td>
                    <td><button type="button" class="btn btn-primary">Return Book</button></td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="6">
                    No Record.
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="rentBookModal" tabindex="-1" role="dialog" aria-labelledby="rentBook" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Rent Book</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <label for="customerId">Customer</label>
                        <select class="form-control" id="customerId">
                            <option>-SELECT-</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="bookId">Book</label>
                        <select class="form-control" id="bookId">
                            <option>-SELECT-</option>
                        </select>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Rent</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#rentBookModal').modal();
        });
    </script>
}
