@model List<BookingLibrary.UI.Models.LogItemViewModel>
@using BookingLibrary.UI.Utilities
@{
    
}

<h3>Events</h3>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Date Occurred</th>
            <th>Event Name</th>
            <th>Log Type</th>
            <th>Message</th>
            <th>Data</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            var index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.CreatedOn.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@item.EventName</td>
                    <td>@item.LogType.ToString()</td>
                    <td>@item.Message</td>
                    <td><pre class="json">@item.Data.ConvertJsonString()</pre></td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="5">
                    No Record.
                </td>
            </tr>
        }
    </tbody>
</table>

