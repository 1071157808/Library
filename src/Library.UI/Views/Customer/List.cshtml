@model List<Library.UI.CustomerViewModel>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<div style="margin-bottom:10px">
    <button class="btn btn-success" type="button" onclick="window.location = '@Url.Action("Add","Customer")';">+ Add</button>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th></th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            var index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@item.FirstName</td>
                    <td>@item.MiddleName</td>
                    <td>@item.LastName</td>
                    <td>&nbsp;</td>
                </tr>index++;
            }
        }
        else
        {
            <tr>
                <td colspan="5">
                    No Record.
                </td>
            </tr>
        }
    </tbody>
</table>

